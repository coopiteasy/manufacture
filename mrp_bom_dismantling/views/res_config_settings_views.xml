<odoo>
    <!-- Adding Bill of Materials config group -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mrp.bom.dismantling</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="work_order" position="after">
                <div class="col-lg-6 col-12 o_setting_box" id="mrp_bom_dismantling_product_choice" title="Select how to set the Main BOM product">
                    <div class="o_setting_right_pane">
                        <label for="dismantling_product_choice"/>
                        <div class="text-muted">
                            Select how to set the Main BOM product
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="dismantling_product_choice" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
